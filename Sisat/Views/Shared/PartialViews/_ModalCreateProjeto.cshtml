@model ProjetoListViewModel

<div class="modal fade" id="projectModal" tabindex="-1" role="dialog" aria-labelledby="projectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="projectModalLabel">Cadastrar Projeto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">
                <!-- Formulário para cadastro/alteração -->
                <form asp-controller="Projetos" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Nome: </label>
                        <input asp-for="Projeto.NomProjeto" class="form-control" placeholder="Projeto" />
                    </div>

                    <div class="modal-footer">
                        <div class="form-group">
                            <input type="submit" value="Cadastrar" class="btn btn-secondary" />
                        </div>
                        <button type="button" class="btn btn-light" data-dismiss="modal">Fechar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
